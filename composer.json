{
    "name": "mailodds/mailodds-php",
    "description": "Official PHP SDK for the MailOdds email validation API",
    "keywords": [
        "mailodds",
        "email-validation",
        "email-verification",
        "php",
        "sdk",
        "api"
    ],
    "homepage": "https://mailodds.com",
    "license": "MIT",
    "authors": [
        {
            "name": "MailOdds",
            "homepage": "https://mailodds.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "autoload": {
        "psr-4": { "MailOdds\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "MailOdds\\Test\\" : "test/" }
    }
}

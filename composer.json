{
    "name": "mailodds/mailodds-php",
    "description": "Official PHP client for the MailOdds Email Validation API",
    "keywords": [
        "email",
        "validation",
        "verification",
        "mailodds",
        "api",
        "sdk",
        "php"
    ],
    "homepage": "https://mailodds.com",
    "license": "MIT",
    "authors": [
        {
            "name": "MailOdds",
            "email": "support@mailodds.com",
            "homepage": "https://mailodds.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "autoload": {
        "psr-4": { "MailOdds\\": "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "MailOdds\\Test\\": "test/" }
    },
    "support": {
        "source": "https://github.com/mailodds/php-sdk",
        "docs": "https://mailodds.com/docs"
    }
}
